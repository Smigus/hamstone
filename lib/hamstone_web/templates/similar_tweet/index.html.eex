  <body>
    <nav class="navbar navbar-nav navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
      <div id="container" style="margin: 0 auto; min-width: 200px;">
        <div id="container" style="inner-margin: 5px;">
          <img src="<%= Routes.static_path(@conn, "/images/Hambat.png") %>" class="rounded float-left" style="width: 50px;">
        </div>
        <a class="display-4 text-white text-center text-decoration-none" href=<%= Routes.page_path(@conn, :index) %>>Hamstone</a>
      </div>
    </nav>

<div class="container-fluid">
  <div class="row">
    <main role="main" class="col ml-sm-auto px-4">

      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Similar Tweets</h1>
      </div>

      <div id="container" style="min-width: 310px; height: 400px; margin: 0 auto">
          <div id="row justify-content-center" ><h1 class="display-1 text-center">#<%= @shingle_count%> Shingles Recorded</h1>
          <div class="container" style="height: 100px;"></div>
          <div class="row text-center">
            <div class="w-100"></div>
          </div>
      </div>

      <div class="table">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Tweet ID</th> 
              <th scope="col">User</th>
              <th scope="col">Content</th>
              <th scope="col">Similarity</th>
              <th scale="col" style="min-width: 150px;">Matched Shingles</th>
            </tr>
          </thead>
          <tbody>
            <%= for {tweet, shingles} <- Enum.zip(@tweets, @shingless) do %>
              <tr id="dino-list">
                <th scope="row"> <%= tweet.tweetid %> </th>
                <td> <%= tweet.username %> </td>
                <td  class="text-break" style="max-width: 750px"> <%= tweet.text %> </td>
                <td> <%= tweet.similarity %> </td>
                <td style="min-width: 150px;"> 
                  <%= for {word1, word2, word3} <- shingles do %>
                    <%= "#{word1} #{word2} #{word3}"%><br>
                  <% end %> 
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
